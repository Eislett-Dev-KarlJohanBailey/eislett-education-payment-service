{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,

    "baseUrl": ".",
    "paths": {
      "@libs/domain": ["libs/domain/src/index.ts"],
      "@libs/domain/*": ["libs/domain/src/*"]
    }
  }
}